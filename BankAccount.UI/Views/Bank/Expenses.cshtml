@using BankAccountSimulation.UI.Models
@model ExpensesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expenses - Bank Account Simulation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h2>Expenses</h2>

        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Expense List</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Expenses != null && Model.Expenses.Any())
                        {
                            @foreach (var expense in Model.Expenses)
                            {
                                <tr>
                                    <td>@expense.Id.ToString()</td>
                                    <td>@expense.Date.ToString()</td>
                                    <td class="text-end">@expense.Amount.ToString("C")</td>
                                    <td>@expense.Description</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td><strong>Total: </strong></td>
                            <td class="text-end"><strong>@Model.TotalExpenses.ToString("C")</strong></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
          @*   <div class="card-footer bg-light text-end">
                <strong>Total Expenses: @Model.TotalExpenses.ToString("C")</strong>
            </div> *@
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
