@using API.Models.DTO
@model DepositWithdrawDTO

@{
    ViewData["Title"] = "Create Deposit/Withdraw";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Deposit or Withdraw</h4>
        </div>
        <div class="card-body">
            <form asp-action="DepositWithdraw" method="post" autocomplete="off">
                <div class="form-group">
                    <label asp-for="AccountId" class="control-label"></label>
                    <input asp-for="AccountId" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="0">Deposit</option>
                        <option value="1">Withdraw</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-success mt-2"><i class="fas fa-save"></i> Submit</button>
                    <a asp-action="Index" class="btn btn-secondary mt-2"><i class="fas fa-list"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}